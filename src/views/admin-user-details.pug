extends admin-layout


block jumbo-desc
    h3 User Details

block admin-content
    h3 #{user.username}
    table.table
        tr
            td Name
            td #{user.firstname} #{user.lastname}
        tr
            td Email
            td #{user.email}
        tr
            td Badge Number
            td #{user.badge}
        tr
            td Section / Unit
            td #{user.unit}
        tr
            td Rank / Title
            td #{user.rank}
        tr
            td Role
            td #{user.tier}
        tr
            td Agency
            td #{user.agency.name}
        tr
            td Date Created
            td #{user.userDate}

    a.btn.btn-default(href="/admin/user/edit/" + user.id) Edit Account Details
    a.btn.btn-default(href="/password/resetUserPass/" + user.id) Reset Password
    if(userAgency._id === user.agency._id)
        a.btn.btn-danger(href="/admin/user/delete/" + user.id) Delete User
